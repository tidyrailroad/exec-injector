<exec>
  <parameter name="sudo" type="single" value="${2}" run="false"/>
  <parameter name="bin" type="single" value="${2}" run="false"/>
  <parameter name="sbin" type="single" value="${2}" run="false"/>
  <parameter name="container" type="single" value="${2}" run="false"/>
  <parameter name="command" type="command" value="${2}" run="false"/>
  <parameter name="program-name" type="single" value="${2}" run="false"/>
  <parameter name="detach" type="flag" value="--detach" run="true"/>
  <parameter name="detach-keys" type="single" value="--detach-keys" run="true"/>
  <parameter name="help" type="flag" value="--help" run="true"/>
  <parameter name="interactive" type="flag" value="--interactive" run="true"/>
  <parameter name="privileged" type="single" value="--privileged=${2}" run="true"/>
  <parameter name="tty" type="flag" value="tty" run="true"/>
  <parameter name="user" type="single" value="--user ${2}" run="true"/>
</exec>
